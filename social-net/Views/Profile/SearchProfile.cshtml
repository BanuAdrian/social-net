@model List<social_net.Models.User>

@{
}

<section>
	@{
		if(Model.Count == 0)
		{
			<h1>No profile was found!</h1>
		}
	}
	@foreach(var user in @Model)
	{
		<article>
			<h3><a asp-controller="Profile" asp-action="Index" asp-route-profileUserId="@user.Id">@user.FirstName @user.LastName</a></h3>
			<p>@user.Email</p>
			<p>@user.DateOfBirth</p>
			<p>@user.Gender</p>
		</article>
		<hr />
	}
</section>