@model List<social_net.Models.User>

<div class="container mt-4">
    @if (Model.Count == 0)
    {
        <div class="card shadow-sm p-4 text-center">
            <h1 class="text-danger">No profile found</h1>
            <p class="text-muted">Try searching again or adjusting your filters.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var user in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <a asp-controller="Profile" asp-action="Index" asp-route-profileUserId="@user.Id"
                                class="text-decoration-none text-dark">
                                    @user.FirstName @user.LastName
                                </a>
                            </h5>
                        </div>

                        <hr>

                        <p class="text-muted mb-2">
                            <i class="bi bi-envelope-fill me-2"></i> @user.Email
                        </p>
                        <p class="text-muted mb-2">
                            <i class="bi bi-calendar-fill me-2"></i> @user.DateOfBirth.ToShortDateString()
                        </p>
                        @if (user.Gender == "Male" || user.Gender == "Female")
                        {
                            <p class="text-muted">
                                <i class="bi bi-gender-ambiguous me-2"></i> @user.Gender
                            </p>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>