@model social_net.Models.User

@{
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h3 class="mb-3 text-primary">Create a Post</h3>
        <form asp-controller="Profile" asp-action="CreatePost" asp-route-currentUserId="@Model.Id" method="post">
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-pencil-square"></i></span>
                <input class="form-control" name="textContent" autocomplete="off" placeholder="What's on your mind, @Model.FirstName?" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Post</button>
        </form>
    </div>

    <div class="card shadow-sm p-4 mt-4">
        <h3 class="mb-3 text-success">Create an Album</h3>
        <form asp-controller="Profile" asp-action="CreateAlbum" asp-route-currentUserId="@Model.Id" method="post" enctype="multipart/form-data">
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <div class="mb-3">
                <label class="form-label"><i class="bi bi-images"></i> Select photos</label>
                <input type="file" name="photos" class="form-control" multiple />
            </div>
            <button type="submit" class="btn btn-success w-100">Create Album</button>
        </form>
    </div>
</div>